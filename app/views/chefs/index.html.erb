

<div class="container">
  <div data-controller="search">
    <form data-action="submit->search#submit" class="d-flex my-4">
      <input type="search" placeholder="Search chefs..." class="form-control me-2" data-search-target="input" />
      <button type="submit" class="btn btn-info">Search</button>
    </form>

    <div class="d-flex justify-content-between align-items-center mb-4 mx-2 w-100">
      <h1 class="">Chefs</h1>
      <%= link_to "Add Chef", new_chef_path, class: "btn btn-success" %>
    </div>

    <table class="table table-bordered table-striped table-hover">
      <thead>
        <tr>
          <th>â„–</th>
          <th>Name</th>
          <th>Bio</th>
          <th class="w-25 text-center">Actions</th>
        </tr>
      </thead>
      <tbody data-search-target="table">
        <% @chefs.each_with_index do |chef, i| %>
          <tr>
            <td><%= i + 1 %></td>
            <td><%= chef.name %></td>
            <td><%= chef.bio %></td>
            <td class="w-25 text-center">
              <%= link_to "Show", chef, class: "btn btn-info btn-sm me-1" %>
              <%= link_to "Edit", edit_chef_path(chef), class: "btn btn-warning btn-sm me-1" %>
              <%= link_to "Delete", chef, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
