<%= form_with(model: @recipe.persisted? ? @recipe : [@chef, @recipe], class: "container mt-4") do |form| %>
  <% if @recipe.errors.any? %>
    <div class="alert alert-danger mb-4">
      <h4 class="alert-heading"><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h4>
      <ul class="mb-0">
        <% @recipe.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :chef_id, value: @chef.id %>

  <div class="mb-3">
    <%= form.label :name, class: "form-label fw-bold" %>
    <%= form.text_field :name, class: "form-control form-control-lg" %>
  </div>

  <div class="mb-3">
    <%= form.label :ingredients, class: "form-label fw-bold" %>
    <%= form.text_area :ingredients, class: "form-control", rows: 4 %>
  </div>

  <div class="mb-4">
    <%= form.label :instructions, class: "form-label fw-bold" %>
    <%= form.text_area :instructions, class: "form-control", rows: 6 %>
  </div>

  <div class="d-flex justify-content-between">
    <%= link_to "Cancel", chef_path(@chef), class: "btn btn-secondary" %>
    <%= form.submit class: "btn btn-success px-5" %>
  </div>
<% end %>
