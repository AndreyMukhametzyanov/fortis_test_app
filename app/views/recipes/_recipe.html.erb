<div id="<%= dom_id recipe %>" class="card my-4 shadow-sm border-0">
  <div class="card-header bg-primary text-white">
    <h5 class="mb-0"><%= recipe.name %></h5>
  </div>

  <div class="card-body">
    <dl class="row">
      <dt class="col-sm-3 fw-semibold">Ingredients</dt>
      <dd class="col-sm-9"><p class="mb-3"><%= simple_format(recipe.ingredients) %></p></dd>

      <dt class="col-sm-3 fw-semibold">Instructions</dt>
      <dd class="col-sm-9"><p><%= simple_format(recipe.instructions) %></p></dd>
    </dl>
  </div>

  <div class="card-footer d-flex justify-content-end">
    <%= link_to "Edit Recipe", edit_recipe_path(recipe), class: "btn btn-warning btn-sm" %>
  </div>
</div>
